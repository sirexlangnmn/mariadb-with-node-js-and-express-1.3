<h1>{{title}}</h1>
<code>this is the "things" template</code>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Product</th>
            <th>Color</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        {{#each things}}
        <tr>
            <td>{{id}}</td>
            <td><a href="/things/{{id}}">{{product}}</a></td>
            <td><span class="color" style="color: {{colorname}}">{{color}}</span></td>
            <td>${{price}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
